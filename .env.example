# ============================================
# MysticBot - Configuration Template
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- Telegram Bot (REQUIRED) ---
BOT_TOKEN=
ADMIN_BOT_TOKEN=
ADMIN_USER_ID=0

# --- Telegram Userbot API (optional) ---
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# --- Database ---
# PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://mystic:mysticpass@localhost/mysticbot
# SQLite (for local development):
DATABASE_URL=sqlite+aiosqlite:///mysticbot.db

# --- Redis (optional, falls back to MemoryStorage) ---
REDIS_URL=redis://localhost:6379/0

# --- LLM API Keys (at least one recommended) ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=sonar

# --- Payment ---
PAYMENT_CARD_NUMBER=
PAYMENT_AMOUNT=777

# --- Rate Limiting ---
RATE_LIMIT=30
RATE_WINDOW=60

# --- Logging ---
LOG_LEVEL=INFO

# --- Feature Toggles ---
ENABLE_TAROT=true
ENABLE_NUMEROLOGY=true
ENABLE_HOROSCOPE=true
ENABLE_FINANCE_CALENDAR=true
ENABLE_DREAM=true
ENABLE_RUNES=true
ENABLE_RANDOM=true
ENABLE_ASK=true
ENABLE_ASTROLOGY=true
ENABLE_MEDITATION=true
