# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# Admin Bot Token (optional)
ADMIN_BOT_TOKEN=your_admin_bot_token_here
# IMPORTANT: Set your Telegram user ID as admin
ADMIN_USER_ID=0

# Telegram Userbot API (for automation)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Database (PostgreSQL or SQLite)
DATABASE_URL=postgresql://mystic:mysticpass@localhost/mysticbot
# For SQLite: sqlite:///./mysticbot.db

# Redis (empty to use memory storage)
REDIS_URL=redis://localhost:6379/0

# API Keys (optional)
OPENAI_API_KEY=sk-...
PERPLEXITY_API_KEY=pplx-...

# Logging
LOG_LEVEL=INFO

# Paths
UPLOAD_DIR=uploads
DATA_DIR=data

# Rate limiting
RATE_LIMIT=30
RATE_WINDOW=60

# Enable modules
ENABLE_TAROT=true
ENABLE_NUMEROLOGY=true
ENABLE_HOROSCOPE=true
ENABLE_FINANCE_CALENDAR=true
ENABLE_DREAM=true
ENABLE_RUNES=true
ENABLE_RANDOM=true
ENABLE_ASK=true
ENABLE_ASTROLOGY=true
ENABLE_MEDITATION=true
